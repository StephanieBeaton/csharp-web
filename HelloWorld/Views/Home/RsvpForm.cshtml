@model HelloWorld.Models.GuestResponse

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/styles.css" />
    <title>RsvpForm</title>
</head>

@{
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="~/Content/styles.css" />

<style>
    .btn a {
        color: white;
        text-decoration: none;
    }

    body {
        background-color: #f1f1f1;
    }
</style>

<div class="text-center">
    <h4 class="panel-heading"> RSVP </h4>
</div>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()

        <p>
            <label>Name: </label> @Html.TextBoxFor(t => t.Name,
          new { @class = "form-control", maxlength = 30, style = "width:200px;" })
        </p>
        <p>
            <label>Phone: </label> @Html.TextBoxFor(t => t.Phone,
          new { @class = "form-control", maxlength = 30, style = "width:200px;" })
        </p>
        <p>
            <label>Email: </label> @Html.TextBoxFor(t => t.Email,
          new { @class = "form-control", maxlength = 30, style = "width:200px;" })
        </p>

        <p>
            Will Attend: @Html.DropDownListFor(t => t.WillAttend, new[]
      {
        new SelectListItem { Text="Yes, I'll be there", Value=bool.TrueString},
        new SelectListItem{Text="No, I can't come", Value=bool.FalseString},
      }, "Choose an option")
        </p>
        <input type="submit" value="Submit RSVP" class="btn btn-success" />
    }
